<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/mapview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_weight="1" >

        <Button
            android:id="@+id/first_des"
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:layout_gravity="left|top"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:text="목적지"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addr"
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="75dp"
            android:background="@android:color/white"
            android:drawableTop="@drawable/line"
            android:drawableLeft="@drawable/picker_address"
            android:text="주소"
            android:textSize="15dp" />

        <Button
            android:id="@+id/call"
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="140dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/call"
            android:text="전화"
            android:textSize="15dp" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="40dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/button_more"
            android:paddingRight="30dp" />

        <Button
            android:id="@+id/btn_draw_State"
            android:layout_width="342dp"
            android:layout_height="92dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="35dp"
            android:onClick="CarButton"
            android:background="@drawable/extended_fab"
            />

        <Button
            android:id="@+id/walk_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="180dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/fab_walk" />

        <Button
            android:id="@+id/trans_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="120dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/fab_bus_subway" />

    </FrameLayout>

</LinearLayout>